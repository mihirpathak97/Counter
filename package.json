{
  "name": "Counter",
  "version": "1.0.0",
  "description": "A cloud based counter",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "build",
    "build-all": "build -mwl",
    "build-linux": "build --linux",
    "build-win": "build --win",
    "build-mac": "build --mac"
  },
  "build": {
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    }
  },
  "author": "",
  "devDependencies": {
    "electron": "^1.8.4",
    "electron-builder": "^20.8.1",
    "electron-builder-squirrel-windows": "^20.8.0"
  },
  "dependencies": {
    "firebase": "^4.12.1",
    "jquery": "^3.3.1"
  }
}
